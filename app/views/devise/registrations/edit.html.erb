        <div class="col-4" align="right">
        <%= f.label :password, "Nova Senha", class: 'texto-label' %>
        </div>
        <div class="col" data-placement="right" data-trigger= "manual" data-toggle="popover" data-content="Senha inválida" id ="text-senha">
