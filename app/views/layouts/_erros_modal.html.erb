<% if resource.errors.any? %>
<div class="modal" tabindex="-1" role="dialog" id="errors-modal">
  <div class="modal-dialog" style="top: 90px">
    <div class="modal-content">
        <div class="modal-header">
            <img src="<%= image_url('icone.png') %>" width="40" height="35" class="d-inline-block align-top displayed"
              alt="logo os incriveis" style="margin-left: 10px;">
              <h5 class="modal-title titulo-modal" id="exampleModalLabel">  Opa, algo deu errado :(</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </br>
          <div class="modal-body subtitulo-modal">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    </div>
  </div>
</div>
<% end %>